# ============================================================
# FoodLens Backend â€” Environment Variables Template
# ============================================================
# Copy this file to .env and fill in your actual keys.
# NEVER commit .env to Git.
# ============================================================

# --- AI Model ---
GEMINI_MODEL_NAME=gemini-2.5-pro

# --- Google Cloud / Vertex AI ---
GOOGLE_API_KEY=your_google_api_key_here
GCP_PROJECT_ID=your_gcp_project_id
GCP_LOCATION=us-central1
GCP_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...","private_key":"..."}'

# --- External Food Data APIs ---
USDA_API_KEY=your_usda_api_key_here
KOREAN_FDA_API_KEY=your_korean_fda_api_key_here
FATSECRET_CLIENT_ID=your_fatsecret_client_id
FATSECRET_CLIENT_SECRET=your_fatsecret_client_secret
DATAGO_API_KEY=your_datago_api_key_here

# --- Auth OAuth Web Bridge (Phase 1) ---
# Render/public base URL used in provider callback registration
AUTH_PUBLIC_BASE_URL=https://foodlens-2-w1xu.onrender.com
# Provider OAuth app credentials (do not expose client_secret in mobile)
AUTH_GOOGLE_CLIENT_ID=your_google_oauth_client_id
AUTH_KAKAO_CLIENT_ID=your_kakao_rest_api_key
AUTH_KAKAO_CLIENT_SECRET=
AUTH_KAKAO_CODE_VERIFY_ENABLED=0
# App callbacks allowed for deep-link return
AUTH_APP_ALLOWED_REDIRECT_URIS=foodlens://oauth/google-callback,foodlens://oauth/kakao-callback
# Optional provider scopes/prompts
AUTH_GOOGLE_OAUTH_SCOPE=openid email profile
AUTH_GOOGLE_OAUTH_PROMPT=consent
AUTH_KAKAO_OAUTH_SCOPE=account_email profile_nickname
AUTH_APP_ALLOWED_LOGOUT_REDIRECT_URIS=foodlens://oauth/logout-complete

# --- Label Rollout Control ---
LABEL_ROLLOUT_AUTO_ENABLED=1
LABEL_ROLLOUT_PROMOTE_AFTER_PASSES=3
LABEL_ROLLOUT_STATE_BACKEND=file
LABEL_ROLLOUT_STATE_PATH=/tmp/foodlens_rollout_state.json

# --- Label Cost Guardrail ---
LABEL_COST_GUARDRAIL_ENABLED=1
LABEL_MONTHLY_BUDGET_USD=10.0
LABEL_ESTIMATED_COST_USD_PER_REQUEST=0.02
LABEL_ESTIMATED_TOKENS_PER_REQUEST=1500

# --- Data Retention ---
RETENTION_ORIGINAL_TTL_DAYS=30
RETENTION_DERIVED_TTL_DAYS=90
RETENTION_LOG_TTL_DAYS=14
RETENTION_STORE_BACKEND=file
RETENTION_STORE_PATH=/tmp/foodlens_retention_store.json
RETENTION_DELETE_BACKEND=noop
DELETION_QUEUE_BACKEND=file
DELETION_QUEUE_PATH=/tmp/foodlens_deletion_queue.json

# --- Sentry (Error Tracking) ---
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
